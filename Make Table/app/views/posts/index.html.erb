<h1>Posts</h1>

<div class="search-container">
  <!-- Search by User ID -->
  <div class="search-box">
    <%= form_with(url: posts_path, method: :get, class: "search-form") do %>
      <%# <%= label_tag :search_user_id, "Search by User ID" %>
      <%= text_field_tag :search_user_id, params[:search_user_id], placeholder: "Enter User ID" %>
      <%= submit_tag "Search" %>
    <% end %>
  </div>


<br>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>User ID</th>
      <th>ID</th>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post['userId'] %></td>
        <td><%= post['id'] %></td>
        <td><%= post['title'] %></td>
        <td><%= post['body'] %></td>
      </tr>
    <% end %>
  </tbody>
</table>